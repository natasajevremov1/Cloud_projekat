@model IEnumerable<StackOverflowService_WebRole.Models.Question>
@{
    ViewBag.Title = "Pitanja";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Pitanja</h2>
        <a href="@Url.Action("Add")" class="btn btn-primary">Postavi pitanje</a>
    </div>

    <form method="get" class="mb-3">
        <input type="text" name="search" class="form-control" placeholder="Pretraži po naslovu..." value="@Request.QueryString["search"]" />
    </form>

    @foreach (var q in Model)
    {
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title">@q.Title</h5>
                <h6 class="card-subtitle mb-2 text-muted">
                    @q.AuthorEmail | @q.CreatedAt.ToString("dd/MM/yyyy HH:mm") | Odgovora: @q.AnswersCount
                </h6>
                <p class="card-text">@q.Description?.Substring(0, Math.Min(q.Description.Length, 150)) ...</p>
                <a href="@Url.Action("Details", new { id = q.RowKey })" class="card-link">Pogledaj detalje</a>
                @if (Session["CurrentUser"] != null && ((StackOverflowService_WebRole.Models.User)Session["CurrentUser"]).PartitionKey == q.AuthorEmail)
                {
                    <a href="@Url.Action("Edit", new { id = q.RowKey })" class="card-link">Izmeni</a>
                    <a href="@Url.Action("Delete", new { id = q.RowKey })" class="card-link text-danger">Obriši</a>
                }
            </div>
        </div>
    }
</div>
